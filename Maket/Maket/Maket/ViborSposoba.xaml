        <Image x:Name="Img"  Source="Map.jpg"  Grid.Column="0" Grid.Row="0"  Grid.ColumnSpan="2" />
        <Label x:Name="Lab"  Text="ул. Автодорожная, 7А  8-924-597-70-71"  Grid.Column="0" Grid.Row="1"  Grid.ColumnSpan="2"  />


    </Grid>
    
    
