<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maket.thankScreen">
    <Grid x:Name="ThankLayout">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button x:Name="Button1" Clicked="OnButtonClicked"  Grid.Column="0" Grid.Row="1" Text="На главную" />
        <Image x:Name="Button2"  Source="logo.png"  Grid.Column="0" Grid.Row="0" />
        <Label x:Name="Button3"  Text="Спасибо что выбрали нас! Счастливого пути"  Grid.Column="0" Grid.Row="2" />


    </Grid>

</ContentPage>